package webcybern;
import java.util.Scanner;


public class Main {
	public static void print(String str) {System.out.println(str);}
	
public static void main(String args[]) {
	
	
	// prog — ÷èñëî ñîçäàííîå ïğîãğàììîé
    // user — ÷èñëî ââåä¸ííîå ïîëüçîâàòåëåì
    int prog, user, tries;
    tries = 1;
    // Ãåíåğèğóåì ñëó÷àéíîå öåëîå ÷èñëî îò 1 äî 10
    prog = (int)(Math.random() * 10) + -10;
    System.out.println("ß çàãàäàëà ÷èñëî îò -10 äî 10, îòãàäàéòå åãî.");
    System.out.print("Ââîäèòå âàøå ÷èñëî: ");
    Scanner input = new Scanner(System.in);  
    // Ïğîâåğÿåì, åñòü ëè â ïîòîêå ââîäà öåëîå ÷èñëî
    if( input.hasNextInt() ) {
        do {
            // ×èòàåì ñ ïîòîêà ââîäà öåëîå ÷èñëî
            user = input.nextInt();
            if(user == prog) {
                System.out.println("Âû óãàäàëè!" + prog);
            } else {
                // Ïğîâåğÿåì, âõîäèò ëè ÷èñëî â îòğåçîê [1;10]
                if (user > -10 && user <= 10) {
                    System.out.print("Âû íå óãàäàëè! ");
                    tries++;
                    // Åñëè ÷èñëî çàãàäàííîå ïğîãğàììîé ìåíüøå...
                    if( prog < user ) {
                        System.out.println("Ìî¸ ÷èñëî ìåíüøå.");
                    } else {
                        System.out.println("Ìî¸ ÷èñëî áîëüøå.");
                    }
                } else {
                    System.out.println("Âàøå ÷èñëî âîîáùå íå èç íóæíîãî îòğåçêà!");
                    tries++;
                }
            }
        } while( user != prog );
    } else {
    	tries++;
        System.out.println("Îøèáêà. Âû íå ââåëè öåëîå ÷èñëî!");
    }
    System.out.println("Äî ñâèäàíüÿ! Ïîïûòîê áûëî "+ tries);

	
	
	
	
	
	
	
	
	
	
}}
